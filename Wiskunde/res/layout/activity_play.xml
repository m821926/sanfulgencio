<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayActivity" >

    <TextView
        android:id="@+id/Nr1_1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Operation"
        android:ems="10"
        android:enabled="true"
        android:inputType="none"
        android:text="1" 
        android:gravity="center">
        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/Nr1_2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr1_1"
        android:layout_alignBottom="@+id/Nr1_1"
        android:layout_toRightOf="@+id/Nr1_1"
        android:ems="10"
        android:text="2"
        android:gravity="center"> 

        
    </TextView>

    <TextView
        android:id="@+id/Nr1_3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr1_1"
        android:layout_alignBottom="@+id/Nr1_1"
        android:layout_toRightOf="@+id/Nr1_2"
        android:ems="10"
        android:text="3" 
        android:gravity="center">

        
    </TextView>

    <TextView
        android:id="@+id/Nr1_4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr1_1"
        android:layout_alignBottom="@+id/Nr1_1"
        android:layout_toRightOf="@+id/Nr1_3"
        android:ems="10"
        android:text="4"
        android:gravity="center"> 
    </TextView>

    <TextView
        android:id="@+id/Operation"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Nr1_1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:text="+" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/Nr2_1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nr1_1"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Operation"
        android:ems="10"
        android:text="1" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/Nr2_2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr2_1"
        android:layout_alignBottom="@+id/Nr2_1"
        android:layout_toRightOf="@+id/Nr2_1"
        android:ems="10"
        android:text="2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Nr2_3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr2_1"
        android:layout_alignBottom="@+id/Nr2_1"
        android:layout_toRightOf="@+id/Nr2_2"
        android:ems="10"
        android:text="3" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/Nr2_4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr2_1"
        android:layout_alignBottom="@+id/Nr2_1"
        android:layout_toRightOf="@+id/Nr2_3"
        android:ems="10"
        android:text="4" 
        android:gravity="center"/>

    <EditText
        android:id="@+id/Nr3_3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nr2_2"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Nr3_2"
        android:ems="10"
        android:inputType="number" 
        android:gravity="center"
        android:selectAllOnFocus="true"
       >
        
    </EditText>
    <EditText
        android:id="@+id/Nr3_4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nr2_3"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Nr3_3"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:selectAllOnFocus="true"
         />
        <EditText
        android:id="@+id/Nr3_5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nr2_4"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/Nr3_4"
        android:ems="10"
        android:inputType="number" 
        android:gravity="center"
        android:selectAllOnFocus="true"
        >
        </EditText>
        
        

    <EditText
        android:id="@+id/Nr3_1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr3_2"
        android:layout_alignBottom="@+id/Nr3_2"
        android:layout_alignLeft="@+id/view1"
        android:ems="10"
        android:inputType="number" 
        android:gravity="center"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:id="@+id/Nr3_2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Nr3_3"
        android:layout_alignBottom="@+id/Nr3_3"
        android:layout_toLeftOf="@+id/Nr2_2"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:selectAllOnFocus="true"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/Nr3_5"
        android:layout_alignTop="@+id/Nr3_3"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnVerify"
        android:layout_alignBottom="@+id/btnVerify"
        android:layout_alignLeft="@+id/Nr3_5"
        android:layout_marginLeft="14dp"
        android:text="@string/Exit" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nr3_3"
        android:layout_marginTop="48dp"
        android:layout_toLeftOf="@+id/btnExit"
        android:text="@string/btn_Verify" />

    <TextView
        android:id="@+id/TimeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnVerify"
        android:layout_alignBottom="@+id/btnVerify"
        android:layout_alignRight="@+id/Nr3_1"
        android:text="" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Nr3_1"
        android:layout_alignRight="@+id/btnExit"
        android:layout_below="@+id/btnVerify"
        android:layout_marginTop="17dp"
        android:max="30"
        android:progress="30" />

</RelativeLayout>